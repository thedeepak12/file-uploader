generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  files    File[]
  folders  Folder[]
}

model Folder {
  id         Int      @id @default(autoincrement())
  name       String
  size       Int
  modifiedAt DateTime @updatedAt
  ownerId    Int
  files      File[]
  owner      User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@index([ownerId])
}

model File {
  id          Int      @id @default(autoincrement())
  name        String
  size        Int
  modifiedAt  DateTime @updatedAt
  ownerId     Int
  folderId    Int
  storageName String?
  folder      Folder   @relation(fields: [folderId], references: [id], onDelete: Cascade)
  owner       User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@index([folderId])
  @@index([ownerId])
}
